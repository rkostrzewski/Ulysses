<UserControl x:Class="Ulysses.App.Modules.ControlPanel.Views.ControlPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="60"
             d:DataContext="{d:DesignInstance local:ControlPanelViewModel}"
             xmlns:local="clr-namespace:Ulysses.App.Modules.ControlPanel.ViewModels"
             xmlns:regions="clr-namespace:Ulysses.App.Modules.Regions">
    <Grid Background="#FF8FB4BF">
        <StackPanel Orientation="Horizontal" Height="60" VerticalAlignment="Top">
            <Button Command="{Binding ChangeContentRegionViewCommand}"
                    CommandParameter="{x:Static regions:ContentRegionViews.ImageDisplayView}"
                    Margin="0,10,0,0" Height="30"
                    VerticalAlignment="Top" Content="Image Display" HorizontalAlignment="Left" Width="110" />
            <Button Command="{Binding ChangeContentRegionViewCommand}"
            	CommandParameter="{x:Static regions:ContentRegionViews.ImageProcessingCustomizationView}"
            	Margin="50,10,0,0" Height="30" Width="160"
            	VerticalAlignment="Top" Content="Processing Customization" />
        </StackPanel>
    </Grid>
</UserControl>