<Window x:Class="Ulysses.App.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://www.codeplex.com/prism"
        mc:Ignorable="d"
        Title="Shell" Height="520" Width="740">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="ControlPanelColumn" Width="*"></ColumnDefinition>
            <ColumnDefinition Name="ContentColumn" Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Name="ControlPanelRegion" 
                    Orientation="Vertical"
                    MinWidth="150" 
                    HorizontalAlignment="Left"
                    Background="Black">
            <ContentControl prism:RegionManager.RegionName="ControlPanelRegion" />
        </StackPanel>
        <ContentControl Grid.Column="1" prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>