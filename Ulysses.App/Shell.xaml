<Window x:Class="Ulysses.App.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:regions="clr-namespace:Ulysses.App.Regions"
        mc:Ignorable="d"
        Title="Shell" Height="520" Width="740">
    <Grid>
        <StackPanel Name="ControlPanelRegion" 
                    Orientation="Horizontal"
                    MinWidth="150" 
                    HorizontalAlignment="Left"
                    Background="Black" Width="732" Height="41" VerticalAlignment="Top">
            <ContentControl prism:RegionManager.RegionName="{x:Static regions:ApplicationRegions.ControlPanelRegion}" />
        </StackPanel>
        <ContentControl prism:RegionManager.RegionName="{x:Static regions:ApplicationRegions.ContentRegion}" Margin="0,41,0,0" />
    </Grid>
</Window>