<Window x:Class="Ulysses.App.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:regions="clr-namespace:Ulysses.App.Regions"
        xmlns:converters="clr-namespace:Ulysses.App.Utils.Converters"
        mc:Ignorable="d"
        Title="Shell" Height="520" Width="1151">
    <Window.Resources>
        <ResourceDictionary>
            <converters:GenericToStringConverter x:Key="GenericToStringConverter" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource Primary300}">
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ContentControl
            prism:RegionManager.RegionName="{Binding Source={x:Static regions:ApplicationRegion.NavigationPanelRegion}, Converter={StaticResource GenericToStringConverter}}"
            Grid.Row="0" />
        <ContentControl
            prism:RegionManager.RegionName="{Binding Source={x:Static regions:ApplicationRegion.ContentRegion}, Converter={StaticResource GenericToStringConverter}}"
            Grid.Row="1" />
    </Grid>
</Window>